<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="350dp"
    android:layout_height="300dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contribucion"
        android:id="@+id/contribucionDialogo" />

    <EditText
        android:hint="Numero de Deposito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/numeroDialogo"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        style="?android:attr/borderlessButtonStyle"
        android:background="@color/botonColor"
        android:text="Continuar"
        android:id="@+id/guardarDatosPatro"
        android:width="200dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/borderlessButtonStyle"
        android:background="@color/botonColor"
        android:text="Salir"
        android:layout_marginTop="10dp"
        android:width="200dp"
        android:id="@+id/salirDialogo"
        android:layout_gravity="center_horizontal" />

</LinearLayout>