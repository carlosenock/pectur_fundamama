<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
    android:gravity="center"
        android:background="@drawable/fondobienvenida"
         >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_marginTop="350dp"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="fill_parent"
    android:weightSum="1">

                  <Button
                    android:layout_width="330dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:text="Soy Voluntario"
                      android:textColor="@android:color/white"
                    android:textSize="23dp"
                    android:gravity="center"
                    android:id="@+id/btUsuario"
                      android:background="@drawable/botonredondorosa"
                    android:onClick="soyUsuario"
                      android:layout_weight="0.15" />
    <Button
        android:layout_width="330dp"
        android:height="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="Soy Visitante"
        android:textColor="@android:color/white"
        android:textSize="23dp"
        android:gravity="center"
        android:id="@+id/btVisitante"
        android:background="@drawable/botonredondoverde"
        android:onClick="soyVisitante"
        android:layout_height="wrap_content"
        android:layout_weight="0.15"/>
</LinearLayout>
            </RelativeLayout>
