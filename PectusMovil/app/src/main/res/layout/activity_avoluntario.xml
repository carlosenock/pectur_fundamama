<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/fondototal"
    tools:context="com.ucla.pectusmovil.controlador.actividad.Avoluntario">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:id="@+id/imgMOROSO"
            android:layout_width= "40dp"
            android:layout_height= "40dp"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="true"
            android:layout_marginLeft= "0dp"

            />

        <TextView
            android:id="@+id/txtcodActividad"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="45dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtactividad"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/imgMOROSO"
            android:layout_alignLeft="@+id/txtcodActividad"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black"
            android:textSize="9dp" />
        </LinearLayout>
</RelativeLayout>
