<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondototal"
    tools:context="com.ucla.pectusmovil.controlador.actividad.DetalleActividad">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Titulo de Actividad"
            android:id="@+id/tvTipoActividad"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/linea"
            android:layout_alignTop="@+id/detalleActividad"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"></LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="218dp"
            android:textSize="25dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="dawdawecfregscergrvrthvtrhvrthvdrtvhhhhhhrthvrtvhrthv"
            android:id="@+id/detalleActividad"
            android:layout_below="@+id/tvTituloActividad"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/rlPanelActividad"
            android:layout_below="@+id/detalleActividad"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha:  "
                android:id="@+id/fechaInfoEvento"
                android:layout_below="@+id/tvInstitucionActividad"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:textColor="@color/negro"
                android:textStyle="bold"
                android:width="1000dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19 de Octubre de 2014"
                android:textStyle="bold"
                android:textColor="@color/negro"
                android:id="@+id/tvInfoActividad"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:width="1000dp"
                android:layout_below="@+id/tvInstitucionActividad"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:paddingLeft="60dp"
                android:paddingRight="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Duracion/Horas : "
                android:layout_below="@+id/tvInfoActividad"
                android:layout_marginTop="5dp"
                android:id="@+id/textView2"
                android:textSize="18dp"
                android:textColor="@color/negro"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="120"
                android:id="@+id/tvDuracionActividad"
                android:paddingLeft="140dp"
                android:textSize="18dp"
                android:textColor="@color/negro"
                android:layout_below="@+id/fechaInfoEvento"
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:layout_alignTop="@+id/textView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Monto (Bsf):"
                android:id="@+id/textView6"
                android:layout_below="@+id/tvDuracionActividad"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:textColor="@color/negro"
                android:textStyle="bold"
                android:paddingRight="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="5dp"
                android:text="300,00"
                android:id="@+id/tvMontoActividad"
                android:textSize="18dp"
                android:paddingLeft="110dp"
                android:layout_below="@+id/tvDuracionActividad"
                android:textColor="@color/negro"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/tvDuracionActividad"
                android:layout_alignEnd="@+id/tvDuracionActividad" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Eutimio sa."
                android:id="@+id/tvInstitucionActividad"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:textSize="23dp"
                android:textColor="@color/negro"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_toEndOf="@+id/textView2"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@drawable/linea"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"></LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
