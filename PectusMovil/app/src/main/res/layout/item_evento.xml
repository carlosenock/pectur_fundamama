<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    tools:context="menu"
    android:layout_marginTop="10dp"
    android:background="@drawable/listamejorada"
    >



    <TextView
        android:id="@+id/txtmes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diciembre"
        android:textColor="@android:color/secondary_text_dark_nodisable"
        android:textSize="20dp"
        android:maxLength="3"
        android:textStyle="normal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="23dp"
        />

    <TextView
        android:id="@+id/txtdia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="31"
        android:textColor="@android:color/black"
        android:textSize="35dp"
        android:textStyle="normal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtdetalle"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:textColor="@android:color/darker_gray"
        android:text="reunion laboral los fines de semana asdagfasdfg"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="25dp"
        android:textStyle="italic"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:id="@+id/txtlugar"
        android:textStyle="bold"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Locacion:"
        android:textSize="10dp"
        android:id="@+id/textVLocacion"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="90dp"
        android:visibility="invisible"
        />

</RelativeLayout>